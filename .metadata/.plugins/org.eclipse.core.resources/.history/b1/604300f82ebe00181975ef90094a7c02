<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
		</Console>
		<File name="configLog" fileName="logs/config.log" append="false">
			<PatternLayout pattern="%t %-5p %c{2} - %m%n" />
		</File>
      <RollingFile name="rollingConfigLog" fileName="logs/configRolling.log"
                     filePattern="log/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd 'at' HH:mm:ss z} %-5level %class{36} %L %M - %msg%xEx%n"/>
            <SizeBasedTriggeringPolicy size="50MB"/>
        </RollingFile>

	</Appenders>
	<Loggers>
		<Logger name="org.apache.log4j.xml" level="debug">
			<AppenderRef ref="rollingConfigLog" />
		</Logger>
		<Root level="debug">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="configLog" />
		</Root>
	</Loggers>
</Configuration>